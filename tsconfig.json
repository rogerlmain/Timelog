{
	"compilerOptions": {
		"esModuleInterop": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"suppressImplicitAnyIndexErrors": true,

		"module": "es2015",
		
		"moduleResolution": "node",
		"noEmitOnError": true,
		"strict": false,
		"removeComments": false,
		"sourceMap": true,

		"target": "es6",
//		"lib": [ "es2019" ],

		"jsx": "react",

		"outDir": "./dist/",

		"baseUrl": "src",

		"skipLibCheck": true,
		"checkJs": false
	},

	"exclude": [
		"node_modules"
	],

	"files": [ "src/main.tsx" ],

	"lib": [
		"dom",
		"dom.iterable",
		"esnext"
	],

	"esModuleInterop": true,
	"declaration": true
}