{
	"compilerOptions": {
		"esModuleInterop": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"suppressImplicitAnyIndexErrors": true,

		"module": "es2015",
		
		"moduleResolution": "node",
		"noEmitOnError": true,
		"strict": false,
		"removeComments": false,
		"sourceMap": true,

		"target": "es6",

		"jsx": "react",

		"outDir": "./dist/",

		"baseUrl": "src",
//		"baseUrl": "./",
		"paths": {
			"source/*": ["source/*"],
			"classes/*": ["source/classes/*"],
			"controls/*": ["source/controls/*"],
			"types/*": ["source/types/*"],
			"pages/*": ["source/pages/*"],
			"/*": ["/*"]
		}/* paths */,

		"skipLibCheck": true,
		"checkJs": false
	},

	"exclude": [
		"node_modules"
	],

	"files": [ "src/main.tsx" ],

	"lib": [
		"dom",
		"dom.iterable",
		"esnext"
	],

	"esModuleInterop": true,
	"declaration": true
}